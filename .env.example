# Application Settings
APP_NAME="FastAPI Application"
VERSION="1.0.0"
DEBUG=true

# API Settings
API_V1_PREFIX="/api/v1"

# Database
DATABASE_URL="sqlite+aiosqlite:///./app.db"

# Security
SECRET_KEY="your-secret-key-change-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","https://tryseedling.live","https://www.tryseedling.live"]

# Frontend URL for redirects (email links, etc.)
FRONTEND_URL="http://localhost:3000"

# Stripe Keys (get from Stripe Dashboard)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# SendGrid (for emails)
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="noreply@tryseedling.live"

# AWS S3 (for video/image storage)
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"
AWS_S3_BUCKET="seedling-uploads"
